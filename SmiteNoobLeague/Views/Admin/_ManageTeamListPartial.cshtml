@model SmiteNoobLeague.Models.AdminPageViews.TeamViewModels.AdminManageTeamListView

<div class="modal-header">
    <h5 class="modal-title" id="CreateTeamModalTitle">Manage teams</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                    <div id="grouped-teams">
                        @foreach (var team in Model.TeamList)
                        {
                            <div class="row team">
                                <p class="list-group-item list-group-item-action col-lg-10">@team.Teamname</p>
                                <div class="col-lg-2 buttons btn-group">
                                    <a href="#" class="btn-sm adminEditButton" onclick="CreateEditTeamPopUp(@team.TeamID)"><i class="fas fa-edit fa-2x"></i></a>
                                    <a href="#" class="btn-sm adminDeleteButton" onclick="AreYouSure(@team.TeamID,'@team.Teamname')"><i class="fas fa-trash-alt fa-2x"></i></a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>