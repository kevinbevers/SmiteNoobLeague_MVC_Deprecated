@model SmiteNoobLeague.Models.AdminPageViews.TeamViewModels.AdminTeamBasicCreateView
<form id="CreateTeamForm" asp-action="CreateTeamBasicModel" asp-controller="Admin" enctype="multipart/form-data" data-ajax="true" data-ajax-update="#FormContentCreateTeam" data-ajax-method="post">
    <div class="form-group">
        <label>* Team Name</label>
        <input asp-for="@Model.TeamName" id="testname" class="form-control" onkeyup="checkTyping()" /> <div id="teamnamediv"></div>
        <span asp-validation-for="@Model.TeamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Team Logo</label>
        <button type="button" class="btn btn-primary form-control-file" onclick="$('#teamlogo').click()">Upload image</button>
        <input id="teamlogo" asp-for="@Model.TeamLogoFile" type="file" class="form-control-file" accept="image/*" hidden />
        <span asp-validation-for="@Model.TeamLogoFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>* Team Captain</label>
        <select asp-for="@Model.TeamCaptainID" class="form-control">
            <option></option>
            <option value="5">Example Captain with ID 5</option>
        </select>
        <span asp-validation-for="@Model.TeamCaptainID" class="text-danger"></span>
    </div>
    @* End of Create Team Form *@
    <p>* is required</p>
    <input type="submit" id="createTeamSubmit" value="Create Team" hidden />
</form>

